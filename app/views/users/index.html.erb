<p id="notice"><%= notice %></p>

<div class="table-wrapper"><h1>User List</h1>

<table border="1">
  <thead>
    <tr>
      <th style="padding-left: 50px; padding-right: 50px">Name</th>
      <th style="padding-left: 50px; padding-right: 50px">Surname</th>
      <th style="padding-left: 90px; padding-right: 90px">Email</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
        <td><%= user.email %></td>
        <td class="action"><%= link_to 'Show', user %></td>
        <td class="action"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="action"><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table></div>

<br>

<span style="margin-left: 4vh;"><%= link_to 'New User', new_user_path %></span>